---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
    text?: string;
    isButton?: boolean;
    isExternal?: boolean;
    icon?: boolean;
}

const {
    text,
    href,
    isExternal = false,
    isButton = false,
    icon = true,
    ...attrs
} = Astro.props as Props;
---

<a
    href={href}
    rel={isExternal ? "external" : ""}
    aria-label={!icon ? text : ""}
    class:list={[{ button: isButton }]}
    {...attrs}
>
    <slot />
    {isExternal && <i class="fa-solid fa-arrow-up-right" />}
</a>
