---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
    isButton?: boolean;
    isExternal?: boolean;
}

const {
    href,
    isExternal = false,
    isButton = false,
    ...attrs
} = Astro.props as Props;
---

<a
    href={href}
    rel={isExternal ? "external" : "prefetch"}
    class:list={[{ button: isButton }]}
    {...attrs}
>
    <slot />
</a>
