---
import "../styles/base.css";
import "@fontsource/rubik/variable.css";
export interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <link rel="icon" type="image/x-icon" href="/favicons/favicon.ico" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicons/apple-touch-icon.svg"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="author" content="Jacob Lamb" />
    <meta name="description" content={description} />
    <meta name="robots" content="index,follow" />
    <meta name="theme-color" content="#1e293b" />
    <meta name="color-scheme" content="dark light" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://jacoblamb.me/favicons/favicon-16x16.png"
    />
    <meta property="og:image:alt" content="website icon" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:url" content="https://jacoblamb.me" />
    <meta name="twitter:image" content="/favicons/favicon-16x16.png" />
    <meta name="twitter:image:alt" content="website icon" />
    <meta name="twitter:creator" content="@jacob_thesheep" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicons/apple-touch-icon.png"
    />
    <link
      rel="icon"
      sizes="32x32"
      type="image/png"
      href="/favicons/favicon-32x32.png"
    />
    <link
      rel="icon"
      sizes="16x16"
      type="image/png"
      href="/favicons/favicon-16x16.png"
    />
    <link rel="shortcut icon" href="/favicons/favicon.ico" />
    <link
      rel="mask-icon"
      sizes="any"
      href="/favicons/apple-touch-icon.svg"
      color="#1e293b"
    />
    <script
      async
      src="https://kit.fontawesome.com/062ee3baff.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <slot />
  </body>
</html>
