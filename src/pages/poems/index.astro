---
import Layout from "../../layouts/Default.astro";
import { getCollection } from "astro:content";
const poems = await getCollection("poems");

const props = {
  title: "Poems",
  description: "A collection of poems.",
};
---

<Layout {...props}>
  <ul>
    {
      poems.map((poem) => (
        <li>
          <a href={`/poems/${poem.slug}/`} set:text={poem.data.title} />
        </li>
      ))
    }
  </ul>
</Layout>
