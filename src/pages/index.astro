---
import Layout from "../layouts/BaseLayout.astro";
import Link from "../components/Link.astro";
import Card from "../components/Card.svelte";
const props = {
  title: "",
  description: "",
  image: "home",
};
const age = new Date().getFullYear() - 2002;
const projects = [
  {
    title: "jtlamb-dev.vercel.app",
    description: "Personal website built with Astro",
    image: "",
    url: "https://jtlamb-dev.vercel.app/",
  },
  {
    title: "1BibleStudy (in progress)",
    description: "All-in-one Bible study tool",
    image: "",
    url: "https://torahcycle-info.vercel.app/",
  },
  {
    title: "1Bookmark (upcoming)",
    description: "",
    image: "",
    url: "",
  },
];
---

<Layout {...props}>
  <main>
    <h1>Hey, I'm Jacob Lamb.</h1>
    <p>
      I'm {age} y/o and I'm a self-taught developer. I'm currently studing Web
      Design and Development at <Link
        set:text="Palomar College"
        href="https://www.palomar.edu/"
      />. I like <Link
        set:text="reading"
        href="https://literal.club/jacobthelamb"
      />
       and playing games.
    </p>
    <span>
      <Link href="https://read.cv/jacobthesheep">view my resume</Link>
    </span>
    <section>
      <h2>Projects</h2>
      <div data-table>
        <Card items={projects} />
      </div>
    </section>
  </main>
</Layout>
