---
import Layout from "../layouts/BaseLayout.astro";
import Link from "../components/Link.astro";
import { dataTable, dataCard, dataCardContent } from "../styles/data.css";
import { authorUrl, repoURL } from "../utils/meta";
import humanizeUrl from "humanize-url";

const props = {
  title: "",
  description: "My personal website",
};

const age = new Date().getFullYear() - 2002;

const projects = [
  {
    title: `${humanizeUrl(authorUrl)}`,
    site: `${authorUrl}`,
    repo: `${repoURL}`,
  },
  {
    title: `${humanizeUrl("https://1biblestudy.jacobdalamb.dev/")}`,
    description: "All-in-one Bible study tool",
    site: "https://1biblestudy.jacobdalamb.dev/",
  },
  {
    title: "1Bookmark (soon)",
    description: "All-in-one bookmark manager",
  },
];
---

<Layout {...props}>
  <main>
    <h1>Hey, I'm Jacob Lamb.</h1>
    <p>
      I'm {age} y/o and I'm a self-taught developer. I'm currently studying Web
      Design and Development at <Link
        set:text="Palomar College"
        href="https://www.palomar.edu/"
      />. I like <Link
        set:text="reading"
        href="https://literal.club/jacobthelamb"
      />
       and playing games.
    </p>
    <span>
      <Link href="https://read.cv/jacobdalamb" set:text="view my resume" />
    </span>
    <section>
      <h2>Projects</h2>
      <div class:list={dataTable}>
        {
          projects.map((item) => (
            <div class:list={dataCard}>
              <div>
                <p>
                  <Link href={item.site} set:text={item.title} />
                </p>
              </div>
              {item.description && (
                <div class:list={dataCardContent}>
                  <p>{item.description}</p>
                </div>
              )}
            </div>
          ))
        }
      </div>
    </section>
  </main>
</Layout>
