{
	"$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"dist",
			".astro",
			".vercel",
			"node_modules",
			"npm-debug.log*",
			"yarn-debug.log*",
			"yarn-error.log*",
			"pnpm-debug.log*",
			".env",
			".env.production",
			".DS_Store",
			"pnpm-lock.yaml",
			"bun.lockb"
		]
	}
}
